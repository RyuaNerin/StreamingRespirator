; Top-most http://editorconfig.org/ file
root = true

[*]
end_of_line = crlf
charset = utf-8
insert_final_newline = true

[*.cs]
indent_style = space
indent_size = 4

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = none

[*.xaml]
indent_style = space
indent_size = 4


[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
